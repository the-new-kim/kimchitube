extends ../base

block body
    div.upload__container
        div.upload__video
            video#preview
            div Maximal reording duration limits 10 sec.
            div
                span Your recording duration: 
                span#timeStamp 0 
                span  sec.
            button(disabled)#actionBtn.social__btn Start Recording


    if errorMessage 
        p=errorMessage
    
    form(method="POST" enctype="multipart/form-data")
        label(for="video") Video
        input(name="video" type="file" accept="video/*" required id="video")
        label(for="thumbnail") Thumbnail
        input(name="thumbnail" type="file" accept="image/*" required id="thumbnail")

        input(name="title" type="text" placeholder="Title" required maxLength=30)
        input(name="description" type="text" placeholder="Description" required minLength=3)
        input(name="hashtags" type="text" placeholder="Hashtags" required)
        input(type="submit" value="Upload")

block scripts
    script(src="/static/js/recorder.js") 