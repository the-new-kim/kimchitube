    a(href=`/video/${video.id}`).video-mixin
        div.video-mixin__thumb(style=video.thumbnailUrl && `background:url(${video.thumbnailUrl}); background-size:cover; background-position:center; background-repeat:no-repeat` )
        div.video-mixin__data
            span.video-mixin__title=video.title
            div.video-mixin__meta
